---
import Section from "../Section.astro";

import { skills, languages } from '@cv'
---

<Section title="Habilidades">
    <ul>
        {
            skills.map(({ name }) => (
                <li>
                    <span>{name}</span>
                </li>
            ))
        }
        {
            languages.map(({ language }) => (
                <li>
                    <span>{language}</span>    
                </li>
            ))
        }
    </ul>
</Section>

<style>
    ul {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    li {
        border-radius: 6px;
        background: #eee;
        color: black;
        font-size: .8rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }
</style>