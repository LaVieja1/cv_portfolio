---
import Section from "../Section.astro";

import { certificates } from '@cv'
---

<Section title="Certificaciones">
    <ul>
        {certificates.map(({ name, issuer, date, url }) => (
            <li>
                <article>
                    <header>
                        <div>
                            <h3>{name}</h3>
                            <h4>{issuer}</h4>
                        </div>

                        <time>{date}</time>
                    </header>
                    <footer>
                        <a href={url} target="_blank" rel="noopener noreferrer">Ver certificaci√≥n</a>
                    </footer>
                </article>
            </li>
        ))}
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    article h3 {
        font-weight: 500;
        color: #111;
    }

    article h4 {
        font-weight: 400;
        color: #222;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }

    time {
        color: #555;
        font-size: .85rem;
    }
    a {
        color: #666;
    }
</style>